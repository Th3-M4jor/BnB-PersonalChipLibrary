<Window x:Class="BnB_ChipLibraryGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BnB_ChipLibraryGui"
        mc:Ignorable="d"
        Closing="ExitClicked"
        Title="ChipLibrary" Height="500" Width="579.115">
    <Window.Resources>
        <Style x:Key="CenterGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="179"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Auto">
            <DataGrid Name="UserChips" AutoGenerateColumns="false" SelectionMode="Single" 
                  HorizontalAlignment="Left" Height="451" VerticalAlignment="Top" 
                  Width="382" CanUserSortColumns="False" CanUserAddRows="False" 
                  CanUserDeleteRows="False" CanUserResizeColumns="True" CanUserResizeRows="False"
                  MouseDown="Grid_MouseLeftButtonDown"
                  HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" IsReadOnly="True" 
                                    HeaderStyle="{StaticResource CenterGridHeaderStyle}" Width="Auto">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Skill" Binding="{Binding Skill}" IsReadOnly="True" 
                                    HeaderStyle="{StaticResource CenterGridHeaderStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Range" Binding="{Binding Range}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Damage" Binding="{Binding Damage}" IsReadOnly="True" 
                                    HeaderStyle="{StaticResource CenterGridHeaderStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn Header="Element" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding ElementImage}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Class" Binding="{Binding ChipClass}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Count" Binding="{Binding ChipCount}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Used" Binding="{Binding UsedInBattle, NotifyOnTargetUpdated=True}" IsReadOnly="False"/>
                </DataGrid.Columns>
                <DataGrid.RowDetailsTemplate>
                    <DataTemplate>
                        <TextBlock Background="Orange" Text="{Binding Description}" TextWrapping="Wrap"
                       HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="300"/>
                    </DataTemplate>
                </DataGrid.RowDetailsTemplate>
            </DataGrid>
        </ScrollViewer>
        <Canvas HorizontalAlignment="Left" Height="451" VerticalAlignment="Top" Width="169" Grid.Column="1">
            <TextBox Name="ChipNameEntered" HorizontalAlignment="Left" Height="22" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Canvas.Left="30" Canvas.Top="3"/>
            <Label Content="SortBy" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Width="48" Grid.Row="1" Canvas.Top="273"/>
            <StackPanel Name="SortButtons" Grid.Row="1" Canvas.Top="296">
                <RadioButton GroupName="SortOption" Name="SortByName" Content="Name" IsChecked="True" Checked="ButtonClick"/>
                <RadioButton GroupName="SortOption" Name="SortByAvgDamage" Content="AvgDamage" Checked="ButtonClick"/>
                <RadioButton GroupName="SortOption" Name="SortByMaxDamage" Content="MaxDamage" Checked="ButtonClick"/>
                <RadioButton GroupName="SortOption" Name="SortByOwned" Content="Owned" Checked="ButtonClick"/>
                <RadioButton GroupName="SortOption" Name="SortByElement" Content="Element" Checked="ButtonClick"/>
            </StackPanel>
            <Button Name="Add"  Content="Add Chip" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Click="ButtonClick" Canvas.Left="30" Canvas.Top="25"/>
            <Button Name="JackedOut"  Content="Jack Out" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Click="ButtonClick" Canvas.Left="57" Canvas.Top="45"/>
            <Button Name="Remove" Content="Remove" HorizontalAlignment="Left" VerticalAlignment="Top" Width="59" Click="ButtonClick" Canvas.Left="91" Canvas.Top="25"/>
            <TextBlock Name="FoundChips" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="117" Grid.RowSpan="2" Width="120" Canvas.Left="30" Canvas.Top="70"/>
            <CheckBox Name="ShowNotOwned" Content="Show Owned Chips Only" HorizontalAlignment="Left" VerticalAlignment="Top" Checked="ShowOwned" Unchecked="ShowOwned" Grid.Row="1" IsChecked="True" Canvas.Top="426"/>
            <CheckBox x:Name="Invert" Content="InvertSort" HorizontalAlignment="Left" VerticalAlignment="Top" Checked="InvertSort" Unchecked="InvertSort" Grid.Row="1" Canvas.Top="371"/>
        </Canvas>
    </Grid>
</Window>
